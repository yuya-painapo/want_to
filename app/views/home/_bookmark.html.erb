<% bookmarks.each do |bookmark| %>
<li>
    <span>
        再生位置：
    </span>
    <a class="bookmark" href="#" data-vpos="<%= bookmark.start_vpos %>">
        <%= vpos_to_h_mm_ss(bookmark.start_vpos) %>
    </a>
    <span>, </span>
    <span>
        コメント：<%= bookmark.comment %>, 
    </span>
    <span>
        ユーザー：
    </span>
    <%= link_to bookmark.user.nickname, {:controller => "user", :action => "show", :id => bookmark.user }, :data => { :'no-turbolink' => '1' } %>
</li>
<% end %>
