<div class="container">
    <h1>MyPage#index</h1>
    <p>Find me in app/views/my_page/index.html.erb</p>
    <h2>ユーザー情報</h2>
    メールアドレス: <%= current_user.email %>
    <h2>ふせん</h2>
    <div class="row">
        <div class="col-sm-12">
            <div class="table-responsive">
                <table id="bookmark" class="table table-hover table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>動画名</th>
                            <th>再生位置</th>
                            <th>コメント</th>
                            <th>その他</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%= render partial: 'user/bookmark', locals: { bookmarks: @bookmarks } %>
                    </tbody>
                </table>
            </div>  
        </div>
    </div>
</div>

<script>
    $(function() {
        $(document).on("click", ".btnEdit", function(e) {
            e.preventDefault();
            var no = $(this).attr("data-no");
            $("#no" + no + " .start_vpos").toggle();
            $("#no" + no + " .comment").toggle();
            $("#no" + no + " .btnGroup").toggle();
            $(this).toggle();
        });

        $(document).on("click", ".btnCancel", function(e) {
            e.preventDefault();
            var no = $(this).attr("data-no");
            $("#no" + no + " .start_vpos").toggle();
            $("#no" + no + " .comment").toggle();
            $("#no" + no + " .btnGroup").toggle();
            $("#no" + no + " .btnEdit").toggle();
        });

        $(document).on("click", ".btnDelete", function(e) {
            if(window.confirm("ふせんを削除します。よろしいですか。")) {
                var no = $(this).attr("data-no");
                $("#no" + no + " form").attr("action", "/my_page/delete");
                $("#no" + no + " form").submit();
            } else {
                return false;
            }
        });
    });
</script>
